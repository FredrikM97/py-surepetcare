{
    "type": "debugpy",
    "request": "launch",
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": [
                "-vv",
                "${file}"
            ],
            "justMyCode": false
        },
        {
            "name": "Debug: All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": [
                "-vv",
                "tests"
            ],
            "justMyCode": false
        },
        {
            "name": "Debug: Changed Tests Only",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": [
                "--picked"
            ],
            "justMyCode": false
        },
    ]
}